pipeline {
    agent any 
    stages {
        stage('Build') { 
            steps {
                echo 'This is the building stage' 
            }
        }
        stage('Test') { 
            steps {
                echo 'running the script now'
                sh 'bash test-script.sh'
            }
        }
        stage('Deploy') { 
            steps {
                echo 'This is the Deploy stage'
            }
        }
    }
}
